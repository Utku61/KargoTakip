<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alhngzl.acilis.acilisekrani.MenuActivity"
    android:background="#00aafe">


    <ImageButton
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:id="@+id/menuMapButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/menu_map"
        android:paddingTop="30dp"
        android:background="#ffffff"
        android:onClick="startMapActivity" />

    <ImageButton
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:id="@+id/menuMissionButton"
        android:layout_below="@+id/menuMapButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/menu_mission"
        android:paddingTop="35dp"
        android:background="#ffffff"
        android:onClick="startTaskActivity" />
</RelativeLayout>
